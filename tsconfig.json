{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "lib": ["ES6", "ES2021", "DOM"],
      "declaration": true,
      "sourceMap": false,
      "outDir": "./",
      "strict": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["index.ts"],
    "exclude": ["node_modules"]
  }
  